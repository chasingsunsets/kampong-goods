@page
@model kampong_goods.Pages.Customers.LoginModel
@{

    ViewData["Title"] = "Login";
}

<div class="container mt-5">
@*@Html.ValidationSummary(false)
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .rebtn {
            background-color: #3563E9;
            ;
            color: white;
            float: right;
        }
    </style>

</head>
<body>

		<div class="container" style="height:500px;">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">

			<h1 class="mb-3">@ViewData["Title"]</h1>

			<form method="post">
				
				<div class="mb-3">
					<label class="form-label" asp-for="LModel.UserName">Username</label>
					<input type="Text" asp-for="LModel.UserName" class="form-control" />
					<span asp-validaton-for="LModel.Email" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="LModel.Password">Password</label>
					<input type="password" asp-for="LModel.Password" class="form-control" />
					<span asp-validaton-for="LModel.Password" class="text-danger"></span>
				</div>

				<div class="mb-3 form-check">
					<input type="checkbox" asp-for="LModel.RememberMe" class="form-check-input" />
					<label class="form-check-label" asp-for="LModel.RememberMe">Remember Me?</label>
				</div>

				<div class="mb-3">
									<button type="submit" class="btn form-control" style="color: white; background: #3563E9;">Login</button>
				</div>

				<a href="/Customers/ForgotPassword" style="float:right;"> Forgot Password?</a>
			</form>
	
</div>
			</div>
		</div>
</body>
</html>
