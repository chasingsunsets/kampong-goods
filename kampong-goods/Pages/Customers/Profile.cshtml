@page
@using Microsoft.AspNetCore.Identity;
@using kampong_goods.Models;

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model kampong_goods.Pages.Customers.ProfileModel
@{
    ViewData["Title"] = "Profile";
    AppUser user = await UserManager.GetUserAsync(HttpContext.User);

}

@{
    if (user!=null)
    {

    <!-- Delete Modal-->
    <div class="modal fade" id="deletecustprofile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                Delete Account
                            </h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Select "Delete" below if you are
                            deleting your account.
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" asp-page-handler="Delete" asp-route-id="@user.Id">Delete</a>
                        </div>
                    </div>
                </div>
    </div>

    <div class="container-fluid mt--7">
                                <div class="row">

                                    <div class="col-xl-8 order-xl-1">
                                        <div class="card shadow ">
                                            <div class="card-header bg-white border-0">
                                        <a class="btn loginBtn" style="color:white;float: right;font-size:h4;" asp-page="/Customers/EditProfile" asp-route-id="@user.Id">Edit</a>

                               
                               <div class="row align-items-center">
                                                    <div class="col-8">
                                                        <h3 class="mb-0">My Profile </h3>
                                                       
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="card-body bg-white">
                                                <h6 class="heading-small text-muted mb-4">Account information</h6>
                                                <div class="pl-lg-4">
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <label>Username</label>
                                                            <h6>@user.UserName</h6>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <label>Email</label>
                                                            <h6>@user.Email</h6>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-6">
                                                            <label>First Name</label>
                                                            <h6>@user.FName</h6>
                                                        </div>
                                                        <div class="col-lg-6">
                                                            <label>Last Name</label>
                                                            <h6>@user.LName</h6>
                                                        </div>
                                                    </div>
                                                </div>



                                                <hr class="my-4">
                                                <!-- Address -->
                                                <h6 class="heading-small text-muted mb-4">Contact information</h6>
                                                <div class="pl-lg-4">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <label>Address</label>
                                                            <h6>@user.Address</h6>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-4">
                                                            <label>Phone Number</label>
                                                            <h6>@user.PhoneNumber</h6>

                               
                                                        </div>

                                                    </div>
                                                </div>


                            <a data-toggle="modal" data-target="#deletecustprofile" class="card-link"
                           style="color: darkred;float: right;">
                                <i class="far fa-trash-alt"></i>
                                Delete Account
                            </a>
                                            </div>


                                        </div>


                                    </div>



                                </div>

    </div>



        
    }


    else
    {


    <h1>Please log in to view profile.</h1>
    }


    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
    <input type="hidden" id="hfAU" name="hfAU" />
    <div id="myModal" class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Customer Details Form</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group row">
                                <input type="hidden" id="hfId" name="CustomerID" />
                                <label>Name:</label>
                                <input type="text" id="txtName" name="Name" value="" class="form-control" />
                            </div>
                            <div class="form-group row">
                                <label>Country:</label>
                                <input type="text" id="txtCountry" name="Country" value="" class="form-control" />
                            </div>
                            <div class="form-group row">
                                <label for="IsActive" class="col-sm-2 col-form-label">IsActive</label>
                                <div class="form-check col-sm-10">
                                    <input class="form-check-input" type="checkbox" value="true" id="IsActive">
                                    <input type="hidden" id="hfIsActive" name="IsActive" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
    </div>
    }

}




@section Scripts {
    <script>
        $('[data-toggle=confirmation]').confirmation({
            rootSelector: '[data-toggle=confirmation]',
        });
    </script>
    }