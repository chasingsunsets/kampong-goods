@page
@model kampong_goods.Pages.Vouchers.IndexModel
@{
    ViewData["Title"] = "Vouchers";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<table class="table mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VoucherList[0].VoucherId)</th>
            <th>@Html.DisplayNameFor(model => model.VoucherList[0].VoucherName)</th>
            <th>@Html.DisplayNameFor(model => model.VoucherList[0].VoucherDiscAmt)</th>
            <th>@Html.DisplayNameFor(model => model.VoucherList[0].VoucherMinSpend)</th>
            <th>@Html.DisplayNameFor(model => model.VoucherList[0].VoucherCode)</th>
            <th>@Html.DisplayNameFor(model => model.VoucherList[0].VoucherExpDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            @foreach (var item in Model.VoucherList)
            {
                <tr>
                    <td>@item.VoucherId</td>
                    <td>@item.VoucherName</td>
                    <td>@item.VoucherDiscAmt</td>
                    <td>@item.VoucherMinSpend</td>
                    <td>@item.VoucherCode</td>
                    <td>@item.VoucherExpDate.ToShortDateString()</td>
                    <td>
                        <a asp-page="/Vouchers/Details" asp-route-id="@item.VoucherId">View</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a class="btn btn-primary mt-3" href="/Vouchers/Add">Add Voucher</a>