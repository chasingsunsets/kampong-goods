                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-page="/Chat/Index"><i class="fa-solid fa-comments"></i></a>
                                        </li>
                                        <li class="nav-item">
                                                <a class="btn registerBtn" asp-area="" asp-page="/Products/productAdd" style="color: white;">Sell</a>
                                            </li>
                                        </ul>
                            }


                            else
