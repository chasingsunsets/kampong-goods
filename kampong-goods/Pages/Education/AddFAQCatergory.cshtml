@page
@model kampong_goods.Pages.Education.AddFAQCategoryModel
@{
    ViewData["Title"] = "Add Catergory";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<form class="mt-3" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="myFAQCat.CategoryName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="myFAQCat.CategoryName" oninput="this.value" />
            <span asp-validation-for="myFAQCat.CategoryName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label" asp-for="myFAQCat.CatDescription"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="myFAQCat.CatDescription"
                   oninput="this.value" />
            <span asp-validation-for="myFAQCat.CatDescription" class="text-danger"></span>
        </div>
    </div>

    <div>
        <input type="submit" value="Add" class="btn btn-primary" />
        <a class="btn btn-secondary ms-2" href="/Education">Cancel</a>
    </div>
</form>



