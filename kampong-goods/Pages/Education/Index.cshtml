@page
@model kampong_goods.Pages.Education.IndexModel
@{
    ViewData["Title"] = "Education Materials";
}

<h1 class="display-4">@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

                                      
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Questions And Answers</h1>
                    <p class="mb-4">
                        We have made this specified Website for answering your doubt while you are using our Website.
                        If you still confused, you may leave your feedback <a href="#"><b>here</b></a>.
                    </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Questions And Anwsers list</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].ID)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Question)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Answer)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Creator)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Editor)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].URL)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Date_Created)</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].ID)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Question)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Answer)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Creator)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Editor)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].URL)</th>
                                            <th>@Html.DisplayNameFor(model => model.FAQlist[0].Date_Created)</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @{
                                    @foreach(var item in Model.FAQlist)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Question</td>
                                            <td>@item.Answer</td>
                                            <td>@item.Creator</td>
                                            <td>@item.Editor</td>
                                            <td>@item.URL</td>
                                            <td>@item.Date_Created</td>
                                            <td>
                                                <a asp-page="/Materials/Details"
                                           asp-route-id="@item.ID">Detail</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger" asp-page="/Materials/Index" asp-page-handler="DeleteFAQ" asp-route-id="@item.ID" >Delete</a>
                                                <a class="btn btn-danger" asp-page="/Materials/Add" >Test</a>
                                            </td>

                                        </tr>
                                        
                                    }
                                }
                                    </tbody>
                                </table>
                        <a class="btn btn-primary mt-3" href="/Materials/Add">Add FAQ</a>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy;</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="js/demo/datatables-demo.js"></script>

</body>

</html>